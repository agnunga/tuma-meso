<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      package="com.niothiel.simplesms"
      android:versionName="0.1.0"
      >
    <application
    	android:icon="@drawable/icon"
    	android:label="@string/app_name"
    	android:name=".SMSApp">
        <activity
        	android:label="@string/app_name"
        	android:name=".ui.ConversationList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
		<activity android:name=".ui.ComposeMessageActivity">
			
		</activity>
		
    </application>


<uses-permission android:name="android.permission.SEND_SMS"></uses-permission>
<uses-permission android:name="android.permission.READ_SMS"></uses-permission>
<uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
<uses-permission android:name="android.permission.RECEIVE_SMS"></uses-permission>
<uses-permission android:name="android.permission.EDIT_SMS"></uses-permission>
<uses-permission android:name="android.permission.WRITE_SMS"></uses-permission>

<uses-sdk android:targetSdkVersion="8" android:maxSdkVersion="8" android:minSdkVersion="7"></uses-sdk>
</manifest> 